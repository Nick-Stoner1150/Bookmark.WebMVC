@model IEnumerable<Bookmark.Models.BookModels.BookListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Book Library</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.BookId) </th>
            <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.BookProgress)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.BookshelfName)</th>

                @foreach (var item in Model)
                {
                    <tr class="table-active">
                        <td>
                            @Html.DisplayFor(modelItem => item.BookId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: @(item.BookProgress +"%")"></div>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookshelfName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.BookId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.BookId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.BookId })
                        </td>
                    </tr>
                }

            </table>
