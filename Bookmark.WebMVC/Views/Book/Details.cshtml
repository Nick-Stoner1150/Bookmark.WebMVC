@model Bookmark.Models.BookModels.BookDetail

@{
    ViewBag.Title = "Details";
}

<h2>Book Details</h2>

<div>
    <hr />
    <div class="card text-white bg-secondary mb-3" style="max-width: 20rem; display: inline-block;">
        <div class="card-header">ID: @Html.DisplayFor(model => model.BookId)</div>
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Author)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Author)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TotalPages)
                </dt>

                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @(Model.BookProgress +"%")" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <dt>
                    @Html.DisplayNameFor(model => model.BookshelfName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BookshelfName)
                </dd>

            </dl>
</div>
        

            @* <dd>
                    @Html.DisplayFor(model => model.TotalPages)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CurrentPage)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CurrentPage)
                </dd> *@

            
    </div>
