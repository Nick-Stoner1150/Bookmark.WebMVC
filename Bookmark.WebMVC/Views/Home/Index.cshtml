@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Bookmark!</h1>
    <p class="lead">Bookmark acts as your personal assistant to keep track of all the books you are, will, and wish to read.</p>
    @* <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p> *@
</div>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/img/BookLibrary.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Add Books</h5>
                <p style="color: black;">Create a list of books you are reading or wish to read and keep track of your progress!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/img/Your Bookshelves.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Add Bookshelves</h5>
                <p style="color: black;">Create custom Bookshelves to organize your books!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/img/Your notes.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Add Notes</h5>
                <p style="color: black;">Whether it's a quote or a thought, write it down and add it to your Books!'</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <h2>Getting Started</h2>
        <p>
            You can't have any books without somewhere to put them! Get started by creating a Bookshelf to store your books. 
        </p>
        <p><a href="@Url.Action("Create", "Bookshelf")"><button type="button" class="btn btn-info">Create Bookshelves &raquo;</button></a></p>
    </div>
    <div class="col-md-4">
        <h2>Add Your Books</h2>
        <p>
            If you are currently reading a book, or just want to add one to your wish list, click the button down below to start adding to your library!
        </p>
        <p><a href="@Url.Action("Create", "Book")"><button type="button" class="btn btn-info">Create Books &raquo;</button></a></p>
    </div>
    <div class="col-md-4">
        <h2>Find Books to Read</h2>
        <p>If you are unsure which book you want to read, click the link below to head on over to Amazon to start searching for your next book to read!</p>
        <p><a class="btn btn-default" href="https://www.amazon.com/gp/browse.html?node=283155&ref_=nav_em__bo_t3_0_2_13_2"><button type="button" class="btn btn-info">Amazon Books &raquo;</button></a></p>
    </div>
</div